{
  "name": "salvageunion-reference",
  "version": "1.48.0",
  "description": "Comprehensive, schema-validated JSON dataset and TypeScript ORM for the Salvage Union tabletop RPG",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./data/*": "./data/*",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist",
    "lib",
    "data",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && bun test && bun run docs && bun run generate:types && tsc --project tsconfig.build.json && bun run format && bun run lint",
    "prepublishOnly": "npm run build && npm run typecheck",
    "validate:ids": "tsx tools/checkUniqueIds.ts",
    "fix:ids": "tsx tools/generateMissingIds.ts",
    "docs": "tsx tools/generateDocs.ts",
    "generate:types": "tsx tools/generateSchemaTypes.ts",
    "typecheck": "tsc --project tsconfig.build.json --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "pdf:read": "tsx tools/rules-parser/pdfReader.ts",
    "pdf:search": "tsx tools/rules-parser/pdfSearch.ts",
    "pdf:find": "tsx tools/rules-parser/findPageNumber.ts",
    "pdf:update-pages": "tsx tools/rules-parser/updatePageNumbers.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alxjrvs/salvageunion-data.git"
  },
  "keywords": [
    "salvage-union",
    "tabletop-rpg",
    "ttrpg",
    "game-data",
    "json-schema",
    "leyline-press",
    "orm",
    "typescript",
    "mech",
    "post-apocalyptic"
  ],
  "author": "Alex Jarvis",
  "license": "Salvage Union Open Game Licence 1.0b",
  "bugs": {
    "url": "https://github.com/alxjrvs/salvageunion-data/issues"
  },
  "homepage": "https://github.com/alxjrvs/salvageunion-data#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.2",
    "@types/pdf-parse": "^1.1.5",
    "jsonschema": "^1.5.0",
    "pdf-parse": "^2.4.5",
    "pdf.js-extract": "^0.2.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}