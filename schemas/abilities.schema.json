{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/abilities.schema.json",
  "title": "abilities",
  "description": "Pilot abilities and skills in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "tree",
      "level"
    ],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/baseEntry"
      }
    ],
    "properties": {
      "description": {
        "type": "string"
      },
      "tree": {
        "$ref": "shared/enums.schema.json#/definitions/tree"
      },
      "level": {
        "oneOf": [
          {
            "type": "integer",
            "minimum": 1,
            "maximum": 3
          },
          {
            "type": "string",
            "const": "L"
          },
          {
            "type": "string",
            "const": "G"
          }
        ]
      },
      "mechActionType": {
        "$ref": "shared/enums.schema.json#/definitions/actionType"
      },
      "grants": {
        "$ref": "shared/objects.schema.json#/definitions/grants"
      },
      "activationCurrency": {
        "type": "string",
        "enum": [
          "Variable"
        ]
      },
      "actions": {
        "$ref": "shared/objects.schema.json#/definitions/actions"
      }
    },
    "unevaluatedProperties": false
  }
}
