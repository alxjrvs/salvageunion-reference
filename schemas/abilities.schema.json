{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/abilities.schema.json",
  "title": "Salvage Union Abilities",
  "description": "Pilot abilities and skills in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "description": "A pilot ability",
    "additionalProperties": false,
    "required": ["id", "name", "tree", "source", "level", "page"],
    "properties": {
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/ability"
      },
      "tree": {
        "$ref": "shared/common.schema.json#/definitions/tree"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "level": {
        "type": "integer",
        "minimum": 1,
        "description": "Level in the ability tree"
      },
      "description": {
        "type": "string",
        "description": "Description of the ability"
      },
      "effect": {
        "type": "string",
        "description": "Mechanical effect of the ability"
      },
      "activationCost": {
        "$ref": "shared/common.schema.json#/definitions/activationCost"
      },
      "range": {
        "$ref": "shared/enums.schema.json#/definitions/range"
      },
      "actionType": {
        "$ref": "shared/enums.schema.json#/definitions/actionType"
      },
      "rollTable": {
        "$ref": "shared/common.schema.json#/definitions/rollTable"
      },
      "traits": {
        "$ref": "shared/common.schema.json#/definitions/traits"
      },
      "options": {
        "type": "array",
        "description": "List of options or choices for this ability",
        "items": {
          "oneOf": [
            {
              "type": "string",
              "description": "Simple text option"
            },
            {
              "type": "object",
              "description": "Structured option with label and value",
              "additionalProperties": false,
              "required": ["label", "value"],
              "properties": {
                "label": {
                  "type": "string",
                  "description": "Display label for the option"
                },
                "value": {
                  "type": "string",
                  "description": "Value or effect of the option"
                }
              }
            }
          ]
        }
      },
      "subAbilities": {
        "type": "array",
        "description": "Named sub-abilities with separate mechanics",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "page": {
        "type": "integer",
        "minimum": 1,
        "description": "Page number in the source book"
      }
    }
  }
}
