{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/abilities.schema.json",
  "title": "Salvage Union Abilities",
  "description": "Pilot abilities and skills in Salvage Union",
  "type": "array",
  "items": {
    "allOf": [
      {
        "additionalProperties": false,
        "$ref": "shared/objects.schema.json#/definitions/entry"
      },
      {
        "$ref": "shared/objects.schema.json#/definitions/action"
      },
      {
        "type": "object",
        "required": ["tree", "level"],
        "properties": {
          "tree": {
            "$ref": "shared/enums.schema.json#/definitions/tree"
          },
          "level": {
            "oneOf": [
              {
                "type": "integer",
                "minimum": 1,
                "maximum": 3
              },
              {
                "type": "string",
                "const": "L"
              },
              {
                "type": "string",
                "const": "G"
              }
            ]
          }
        }
      }
    ]
  }
}
