{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/classes.core.schema.json",
  "title": "Salvage Union Core Classes",
  "description": "Core character classes in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["maxAbilities", "advanceable", "coreTrees"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "maxAbilities": {
        "type": "integer",
        "minimum": 1,
        "description": "Maximum number of abilities this class can have"
      },
      "advanceable": {
        "type": "boolean",
        "description": "Whether this class can advance to hybrid classes"
      },
      "coreTrees": {
        "type": "array",
        "description": "Core ability trees available to this class",
        "items": {
          "$ref": "shared/enums.schema.json#/definitions/tree"
        }
      }
    },
    "unevaluatedProperties": false
  }
}
