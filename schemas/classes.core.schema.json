{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/classes.core.schema.json",
  "title": "Salvage Union Core Classes",
  "description": "Core character classes in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "description": "A core character class",
    "additionalProperties": false,
    "required": ["id", "name", "source", "page", "maxAbilities", "advanceable"],
    "properties": {
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "advanceable": {
        "type": "boolean",
        "description": "Indicates if this class can advance into an advanced / hybrid class"
      },
      "maxAbilities": {
        "type": "integer",
        "minimum": 10,
        "maximum": 12,
        "description": "Maximum number of abilities a character can have"
      },
      "name": {
        "$ref": "shared/common.schema.json#/definitions/name"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "description": {
        "type": "string",
        "description": "Description of the class"
      },
      "coreTrees": {
        "type": "array",
        "description": "Core ability trees for this class",
        "items": {
          "$ref": "shared/common.schema.json#/definitions/tree"
        }
      },
      "page": {
        "type": "integer",
        "minimum": 1,
        "description": "Page number in the source book"
      }
    }
  }
}
