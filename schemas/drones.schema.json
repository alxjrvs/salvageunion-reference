{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/drones.schema.json",
  "title": "Salvage Union Drones",
  "description": "Autonomous drones in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "description": "An autonomous drone",
    "additionalProperties": false,
    "required": ["name", "source", "structurePoints", "page"],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Name of the drone"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "description": {
        "type": "string",
        "description": "Description of the drone"
      },
      "structurePoints": {
        "$ref": "shared/common.schema.json#/definitions/structurePoints"
      },
      "techLevel": {
        "$ref": "shared/common.schema.json#/definitions/techLevel"
      },
      "salvageValue": {
        "$ref": "shared/common.schema.json#/definitions/salvageValue"
      },
      "systems": {
        "type": "array",
        "description": "Systems installed on this drone",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/embeddedSystem"
        }
      },
      "page": {
        "type": "integer",
        "minimum": 1,
        "description": "Page number in the source book"
      }
    }
  }
}
