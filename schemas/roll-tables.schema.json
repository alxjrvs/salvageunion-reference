{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/roll-tables.schema.json",
  "title": "Salvage Union Roll Tables",
  "description": "Random tables and roll tables in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["section", "table"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry",
        "additionalProperties": false
      }
    ],
    "properties": {
      "section": {
        "type": "string",
        "description": "Section or category of the roll table"
      },
      "table": {
        "type": "object",
        "description": "Roll table entries keyed by roll result ranges",
        "additionalProperties": {
          "type": "string"
        }
      }
    }
  }
}
