{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "anyOf": [
      {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "$ref": "shared/enums.schema.json#/definitions/class" },
          "source": { "$ref": "shared/enums.schema.json#/definitions/source" },
          "type": { "enum": ["core"] },
          "description": { "type": "string" },
          "coreAbilities": {
            "type": "array",
            "items": { "$ref": "shared/enums.schema.json#/definitions/tree" }
          },
          "hybridClasses": {
            "type": "array",
            "items": { "$ref": "shared/enums.schema.json#/definitions/class" }
          },
          "advancedAbilities": {
            "$ref": "shared/enums.schema.json#/definitions/tree"
          },
          "legendaryAbilities": {
            "type": "array",
            "items": { "$ref": "shared/enums.schema.json#/definitions/ability" }
          },
          "page": { "type": "number" }
        }
      },
      {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "$ref": "shared/enums.schema.json#/definitions/class" },
          "type": { "enum": ["hybrid"] },
          "description": { "type": "string" },
          "source": { "$ref": "shared/enums.schema.json#/definitions/source" },
          "coreClasses": {
            "type": "array",
            "items": { "$ref": "shared/enums.schema.json#/definitions/class" }
          },
          "coreAbilities": {
            "type": "array",
            "items": { "$ref": "shared/enums.schema.json#/definitions/tree" }
          },
          "advancedAbilities": {
            "$ref": "shared/enums.schema.json#/definitions/tree"
          },
          "legendaryAbilities": {
            "type": "array",
            "items": { "$ref": "shared/enums.schema.json#/definitions/ability" }
          },
          "page": { "type": "number" }
        }
      }
    ]
  }
}
