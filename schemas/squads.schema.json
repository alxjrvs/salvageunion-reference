{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/squads.schema.json",
  "title": "Salvage Union Squads",
  "description": "NPC squads and groups in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "actions"
    ],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "hitPoints": {
        "$ref": "shared/common.schema.json#/definitions/hitPoints"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "traits": {
        "$ref": "shared/objects.schema.json#/definitions/traits"
      },
      "damageType": {
        "$ref": "shared/enums.schema.json#/definitions/damageType"
      }
    }
  }
}
