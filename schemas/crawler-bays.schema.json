{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/crawler-bays.schema.json",
  "title": "crawler-bays",
  "description": "Bays and facilities on Union Crawlers in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["damagedEffect", "npc", "actions", "techLevelEffects"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "damagedEffect": {
        "type": "string",
        "description": "Effect when this bay is damaged"
      },
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      },
      "choices": {
        "$ref": "shared/objects.schema.json#/definitions/choices"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "techLevelEffects": {
        "type": "array",
        "description": "Effects that scale with tech level",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["techLevelMin", "techLevelMax", "effect"],
          "properties": {
            "techLevelMin": {
              "type": "integer",
              "minimum": 1,
              "description": "Minimum tech level for this effect"
            },
            "techLevelMax": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum tech level for this effect"
            },
            "effect": {
              "type": "string",
              "description": "Description of the effect"
            }
          }
        }
      },
      "table": {
        "$ref": "shared/objects.schema.json#/definitions/table"
      }
    },
    "unevaluatedProperties": false
  }
}
