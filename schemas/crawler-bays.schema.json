{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/crawler-bays.schema.json",
  "title": "Salvage Union Crawler Bays",
  "description": "Bays and facilities on Union Crawlers in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["damagedEffect", "npc", "actions", "techLevelEffects"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry",
        "additionalProperties": false
      }
    ],
    "properties": {
      "damagedEffect": {
        "type": "string",
        "description": "Effect when this bay is damaged"
      },
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "techLevelEffects": {
        "type": "array",
        "description": "Effects that scale with tech level",
        "items": {
          "type": "object"
        }
      }
    }
  }
}
