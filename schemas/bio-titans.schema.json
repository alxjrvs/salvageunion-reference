{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/bio-titans.schema.json",
  "title": "Salvage Union Bio-Titans",
  "description": "Massive bio-engineered titan creatures in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "description": "A bio-titan creature",
    "additionalProperties": false,
    "required": ["id", "name", "source", "structurePoints", "page"],
    "properties": {
      "id": {
        "$ref": "shared/common.schema.json#/definitions/id"
      },
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Name of the bio-titan"
      },
      "source": {
        "$ref": "shared/enums.schema.json#/definitions/source"
      },
      "description": {
        "type": "string",
        "description": "Description of the bio-titan"
      },
      "structurePoints": {
        "$ref": "shared/common.schema.json#/definitions/structurePoints"
      },
      "actions": {
        "type": "array",
        "description": "Special abilities of this bio-titan",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "page": {
        "type": "integer",
        "minimum": 1,
        "description": "Page number in the source book"
      }
    }
  }
}
