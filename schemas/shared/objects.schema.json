{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "structure_pts": { "type": "number" },
        "energy_pts": { "type": "number" },
        "heat_cap": { "type": "number" },
        "system_slots": { "type": "number" },
        "module_slots": { "type": "number" },
        "cargo_cap": { "type": "number" },
        "tech_level": { "type": "number" },
        "salvage_value": { "type": "number" },
        "notes": { "type": "string" }
      }
    },
    "action": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "source": { "$ref": "enums.schema.json#/definitions/source" },
        "description": {
          "type": "string"
        },
        "effect": {
          "type": "string"
        },
        "activationCost": {
          "$ref": "common.schema.json#/definitions/activationCost"
        },
        "range": { "$ref": "enums.schema.json#/definitions/range" },
        "actionType": { "$ref": "enums.schema.json#/definitions/actionType" },
        "traits": { "$ref": "common.schema.json#/definitions/traits" },
        "damage": { "$ref": "common.schema.json#/definitions/damage" },
        "stats": { "$ref": "objects.schema.json#/definitions/stats" },
        "options": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "label": { "type": "string" },
                  "value": { "type": "string" }
                }
              }
            ]
          }
        },
        "rollTable": { "$ref": "common.schema.json#/definitions/rollTable" },
        "page": { "type": "number" }
      }
    },
    "system": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "source": { "$ref": "enums.schema.json#/definitions/source" },
        "techLevel": { "type": "number" },
        "slotsRequired": { "type": "number" },
        "salvageValue": { "type": "number" },
        "recommended": { "type": "boolean" },
        "traits": { "$ref": "common.schema.json#/definitions/traits" },
        "description": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "activationCost": {
          "$ref": "common.schema.json#/definitions/activationCost"
        },
        "range": { "$ref": "enums.schema.json#/definitions/range" },
        "damage": { "$ref": "common.schema.json#/definitions/damage" },
        "rollTable": { "$ref": "common.schema.json#/definitions/rollTable" },
        "actionType": { "$ref": "enums.schema.json#/definitions/actionType" },
        "actions": {
          "type": "array",
          "items": { "$ref": "objects.schema.json#/definitions/action" }
        },
        "statBonus": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "stat": { "type": "string" },
            "bonus": { "type": "number" }
          }
        },
        "count": { "type": "number" },
        "page": { "type": "number" }
      }
    }
  }
}
