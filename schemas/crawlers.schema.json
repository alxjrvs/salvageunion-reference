{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/crawlers.schema.json",
  "title": "Salvage Union Crawlers",
  "description": "Crawler vehicles in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["npc", "actions"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry",
        "additionalProperties": false
      }
    ],
    "properties": {
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      }
    }
  }
}
