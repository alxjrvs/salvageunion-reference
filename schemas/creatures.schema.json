{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/creatures.schema.json",
  "title": "creatures",
  "description": "Creatures and wildlife in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["hitPoints", "actions"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "hitPoints": {
        "$ref": "shared/common.schema.json#/definitions/hitPoints"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "traits": {
        "$ref": "shared/objects.schema.json#/definitions/traits"
      }
    },
    "unevaluatedProperties": false
  }
}
