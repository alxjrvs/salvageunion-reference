{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/npcs.schema.json",
  "title": "npcs",
  "description": "Non-player characters and people in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "hitPoints",
      "actions"
    ],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/baseEntry"
      }
    ],
    "properties": {
      "hitPoints": {
        "$ref": "shared/common.schema.json#/definitions/hitPoints"
      },
      "actions": {
        "$ref": "shared/objects.schema.json#/definitions/actions"
      },
      "traits": {
        "type": "array",
        "description": "Special traits and properties of items, systems, or abilities",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/trait"
        }
      }
    },
    "unevaluatedProperties": false
  }
}
