{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/npcs.schema.json",
  "title": "Salvage Union NPCs",
  "description": "Non-player characters and people in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "hitPoints",
      "actions"
    ],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "hitPoints": {
        "$ref": "shared/common.schema.json#/definitions/hitPoints"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "traits": {
        "$ref": "shared/objects.schema.json#/definitions/traits"
      }
    }
  }
}
