{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/equipment.schema.json",
  "title": "Salvage Union Equipment",
  "description": "Pilot equipment and gear in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["techLevel"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "techLevel": {
        "type": "integer",
        "minimum": 0
      },
      "traits": {
        "$ref": "shared/objects.schema.json#/definitions/traits"
      },
      "range": {
        "$ref": "shared/enums.schema.json#/definitions/range"
      },
      "notes": {
        "type": "string"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      }
    }
  }
}
