{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/equipment.schema.json",
  "title": "equipment",
  "description": "Pilot equipment and gear in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["techLevel"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      },
      {
        "$ref": "shared/objects.schema.json#/definitions/stats"
      }
    ],
    "properties": {
      "bonusPerTechLevel": {
        "$ref": "shared/objects.schema.json#/definitions/bonusPerTechLevel"
      },
      "techLevel": {
        "$ref": "shared/common.schema.json#/definitions/techLevel"
      },
      "traits": {
        "$ref": "shared/arrays.schema.json#/definitions/traits"
      },
      "range": {
        "$ref": "shared/enums.schema.json#/definitions/range"
      },
      "effect": {
        "type": "string",
        "description": "Mechanical effect of the equipment"
      },
      "options": {
        "$ref": "shared/arrays.schema.json#/definitions/actionOptions"
      },
      "actionType": {
        "$ref": "shared/enums.schema.json#/definitions/actionType"
      },
      "damage": {
        "$ref": "shared/objects.schema.json#/definitions/damage"
      },
      "activationCost": {
        "$ref": "shared/common.schema.json#/definitions/activationCost"
      },
      "table": {
        "$ref": "shared/objects.schema.json#/definitions/table"
      },
      "notes": {
        "type": "string"
      },
      "actions": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      }
    },
    "unevaluatedProperties": false
  }
}
