{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Salvage Union Data Schema Catalog",
  "description": "Catalog of all available schemas in the salvageunion-data repository",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema catalog version"
    },
    "schemas": {
      "type": "array",
      "description": "List of all available schemas",
      "items": {
        "type": "object",
        "required": ["id", "title", "dataFile", "schemaFile", "itemCount"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this schema"
          },
          "title": {
            "type": "string",
            "description": "Human-readable title"
          },
          "description": {
            "type": "string",
            "description": "Description of what this schema validates"
          },
          "dataFile": {
            "type": "string",
            "description": "Path to the data file"
          },
          "schemaFile": {
            "type": "string",
            "description": "Path to the schema file"
          },
          "itemCount": {
            "type": "integer",
            "description": "Number of items in the data file"
          },
          "requiredFields": {
            "type": "array",
            "description": "List of required fields",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "data": {
