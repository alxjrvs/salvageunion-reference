{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/vehicles.schema.json",
  "title": "vehicles",
  "description": "Conventional vehicles in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["structurePoints", "techLevel", "salvageValue", "systems"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "structurePoints": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "techLevel": {
        "$ref": "shared/common.schema.json#/definitions/techLevel"
      },
      "salvageValue": {
        "$ref": "shared/common.schema.json#/definitions/salvageValue"
      },
      "systems": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "traits": {
        "type": "array",
        "description": "Special traits and properties of items, systems, or abilities",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/trait"
        }
      }
    },
    "unevaluatedProperties": false
  }
}
