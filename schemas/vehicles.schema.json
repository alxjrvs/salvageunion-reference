{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/vehicles.schema.json",
  "title": "Salvage Union Vehicles",
  "description": "Conventional vehicles in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["structurePoints", "techLevel", "salvageValue", "systems"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry"
      }
    ],
    "properties": {
      "structurePoints": {
        "$ref": "shared/common.schema.json#/definitions/positiveInteger"
      },
      "techLevel": {
        "type": "integer",
        "minimum": 0
      },
      "salvageValue": {
        "$ref": "shared/common.schema.json#/definitions/salvageValue"
      },
      "systems": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "traits": {
        "$ref": "shared/objects.schema.json#/definitions/traits"
      }
    }
  }
}
