{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://salvageunion.com/schemas/chassis.schema.json",
  "title": "Salvage Union Mech Chassis",
  "description": "Mech chassis definitions in Salvage Union",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["stats", "chassisAbilities", "patterns"],
    "allOf": [
      {
        "$ref": "shared/objects.schema.json#/definitions/entry",
        "additionalProperties": false
      }
    ],
    "properties": {
      "stats": {
        "$ref": "shared/objects.schema.json#/definitions/stats"
      },
      "chassisAbilities": {
        "type": "array",
        "items": {
          "$ref": "shared/objects.schema.json#/definitions/action"
        }
      },
      "patterns": {
        "type": "array",
        "items": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Name of the pattern"
          },
          "systems": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "modules": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "npc": {
        "$ref": "shared/objects.schema.json#/definitions/npc"
      }
    }
  }
}
